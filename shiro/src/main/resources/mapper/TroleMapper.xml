<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shiro.mapper.TroleMapper">

<select id="selectRoleByUserId" parameterType="integer" resultType="com.example.shiro.bean.Trole">
    SELECT t.*  FROM t_role t ,t_userrole r WHERE t.role_id = r.role_id AND r.user_id= #{userId}
</select>

</mapper>